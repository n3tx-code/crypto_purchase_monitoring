{% extends 'base.html.twig' %}

{% block title %} Add Crypto {% endblock %}

{% block body %}

    <h2 class="text-center mt-3 mb-3">Add a crypto</h2>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type="hidden" name="_token" value="{{ csrf_token('addCrypto') }}">
            <button type="submit" class="btn btn-success btn-block">Add</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}